{
  "name": "ZacAI Next.js AI App Dev Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "postCreateCommand": "npm install",
  "updateContentCommand": "npm install",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",            // ESLint integration
        "esbenp.prettier-vscode",            // Prettier formatting
        "dsznajder.es7-react-js-snippets",   // React snippets productivity
        "bradlc.vscode-tailwindcss",         // Tailwind CSS intellisense support
        "orta.vscode-jest"                   // Jest test explorer and running support
      ],
      "settings": {
        "editor.formatOnSave": true,
        "eslint.run": "onSave"
      }
    }
  }
}
