{
  "name": "Next.js AI App",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",         // Use latest stable Node.js image if possible
  "features": {
    // Add database or other tools here if needed, e.g. with devcontainer Features
  },
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dsznajder.es7-react-js-snippets",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"           // If using Tailwind
      ]
    }
  },
  "forwardPorts": [3000],
  "updateContentCommand": "npm install",      // Auto-install deps if dependencies change
  "portsAttributes": {
    "3000": {
      "onAutoForward": "openPreview"
    }
  }
}
