{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],

      "app/*": ["app/*"],
      "components/*": ["components/*"],
      "ui/*": ["components/ui/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],

      "ai/*": ["ai/*"],
      "ai-engine/*": ["ai/engine/*"],
      "ai-domains/*": ["ai/domains/*"],
      "ai-orchestration/*": ["ai/orchestration/*"],
      "ai-shared/*": ["ai/shared/*"],

      "api/*": ["api/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", ".next", "dist", "archive"]
}
